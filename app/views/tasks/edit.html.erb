<h1>id: 
<%= @task.id %>
 のメッセージ編集ページ</h1>

<%= form_for(@task) do |f| %>

<% if @task.errors.any? %>
  <div id="error_explannation" class="alert alert-warning">
    <ul>
      <% @task.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="form-group" >
  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content, class: 'form-control'%>
</div>
<div class="form-group" >
  <%= f.label :status, 'ステータス' %>
  <%= f.text_field :status, class: 'form-control'%>
</div>
  <%= f.submit '投稿' %>
<% end %>


